#include<iostream>
#include<string>
using namespace std;



int main() {
	int a, b, c;
	cout << "Nhap vao 3 so: ";
	cin >> a >> b >> c;
	if (a > b) {
		if (a > c)
			cout << a << " lon nhat";
		else
			cout << c << " lon nhat";
	}
	else {
		if (b > c)
			cout << b << " lon nhat";
		else
			cout << c << " lon nhat";

	}
// dung ham max de tim so lon nhat
//cout << max({ a,b,c });
	return 0;
}
